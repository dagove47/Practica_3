
@model Practica_3.Entities.Registro

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container mt-5">
    <h2 class="mb-3">Registro</h2>
    <h3 style="color:red">@ViewBag.msj</h3>
    @using (Html.BeginForm("Registro", "Home"))
    {
        <div class="form-group mb-3">
            <label for="compra">Compra</label>
            @Html.TextBoxFor(m => m.Compra, new { 
                @type = "text", 
                @class = "form-control", 
                @placeholder = "Seleccione la Compra", 
                @id = "compra", 
                @required = "required"
            })
        </div>
        <div class="form-group mb-3">
            <label for="saldo">Saldo</label>
            @Html.TextBoxFor(m => m.Saldo, new { 
                @type = "number", 
                @class = "form-control", 
                @placeholder = "", 
                @id = "saldo", 
                @required = "required",
                /** onkeyup = "ConsultarSaldoCompras();" */
            })
        </div>
        <div class="form-group mb-3">
            <label for="abono">Abono</label>
            @Html.TextBoxFor(m => m.Abono, new { 
                @type = "number", @class = "form-control", 
                @placeholder = "Ingrese el monto del abono", 
                @id = "abono", 
                @required = "required" })
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    }
</main>

